{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Local package.json schema",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "private": { "type": "boolean" },
    "description": { "type": "string" },
    "scripts": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "object"]
      }
    },
    "devDependencies": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "object"]
      }
    }
  },
  "additionalProperties": true
}
